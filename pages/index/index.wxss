page {
  background-color: #fef9e7;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 80%;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  min-height: 180rpx;
  border: 1rpx solid #d8b4a0;
  border-radius: 12rpx;
  background-color: #fffefb;
  padding: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.count {
  align-self: flex-end;
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.btn {
  width: 100%;
  margin-top: 15rpx;
  background-color: #d8b4a0;
  color: #000;
  padding: 4rpx 0;
  font-size: 32rpx;
  text-align: center;
  border-radius: 12rpx;
  font-weight: bold;
}
.btn[disabled] {
  opacity: 0.8;
  background-color: #d1b6a8 !important;
}
.result {
  margin-top: 40rpx;
  white-space: pre-wrap;
  font-size: 30rpx;
  color: #3c3c3c;
  line-height: 1.8;
  width: 100%;
}
