.container {
  padding: 30rpx;
  background: #f9f9f9;
  min-height: 100vh;
  box-sizing: border-box;
}

.input-box {
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fefefe;
}

.add-btn {
  width: 100%;
  background-color: #f0e0c0;
  color: #333; /* 按钮文字变黑 */
  padding: 16rpx 0;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.list .memo {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.memo .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.memo .text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  word-break: break-word;
}

.memo .del {
  background-color: #ffecec;
  color: #f44336;
  padding: 6rpx 24rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f44336;
}

.memo .del:active {
  opacity: 0.7;
}

.memo .time {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}
